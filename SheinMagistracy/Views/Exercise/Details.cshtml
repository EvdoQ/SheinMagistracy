@model SheinMagistracy.Models.Exercise

<div class="">
    <div class="container backgroundWhite pt-4">
        <div class="card" style="border:1px solid #000000; ">
            <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-md-right">
                    <h1 class="text-danger"> @((Model.Deadline.ToString("dd.MM")))</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@WC.ImagePath@Model.Image" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">
                                <div class="col-12">
                                    <span class="badge p-3 border">@Model.Subject.SubjectName</span>
                                    <h3 class="text-success"></h3>
                                    <p class="text-secondary">@Html.Raw(Model.Description)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-dark">
                <div class="row">
                    <div class="col-12 pb-1">
                        <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Вернуться</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>