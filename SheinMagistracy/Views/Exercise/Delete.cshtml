@model SheinMagistracy.Models.Exercise
@{
    var title = "Удаление задачи";
    ViewData["Title"] = title;
}

<div class="container">
    <form method="post">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="border p-3">
            <div class="row">
                <div class="col-8">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea disabled asp-for="Description" class="form-control summernote"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="IssueDate"></label>
                        <input disabled asp-for="IssueDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Deadline"></label>
                        <input disabled asp-for="Deadline" class="form-control" />
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="SubjectId"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Subject.SubjectName" disabled class="form-control" />
                        </div>
                    </div>
                     <button type="submit" class="btn btn-danger" value="Delete">Удалить</button>
                    <a asp-action="Index" class="btn btn-success">Вернуться</a>
                </div>
                <div class="col-4">
                    <img src="@WC.ImagePath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 150
                disable:true
            });
        });
    </script>
}